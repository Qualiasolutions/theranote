{
  "name": "theranote-platform",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:theranote": "npm run dev --workspace=theranote",
    "dev:thrivesync": "npm run dev --workspace=thrivesync",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/.next",
    "db:gen-types": "supabase gen types typescript --project-id etxvaajfgigmxoxjimrr > packages/database/src/types.ts"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  }
}
